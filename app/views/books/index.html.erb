<p style="color: green"><%= notice %></p>

<h1><%= t("index.title") %></h1>

<div id="books" class="index-items">
  <% @books.each do |book| %>
    <div class="index-item">
      <%= render book %>
      <p>
        <%= link_to t("link.show"), book_path(locale: I18n.locale, id: book) %>
      </p>
    </div>
  <% end %>
</div>

<nav class="page-nav">
  <%= link_to t("link.newbook"), new_book_path %>
</nav>
