<p style="color: green"><%= notice %></p>

<h1><%= t("index.title", name: Book.model_name.human(count: 2)) %></h1>

<div id="books" class="index-items">
  <% @books.each do |book| %>
    <div class="index-item">
      <%= render book %>
      <p>
        <%= link_to t("link.show", name: Book.model_name.human), book_path(locale: I18n.locale, id: book) %>
      </p>
    </div>
  <% end %>
</div>

<nav class="page-nav">
  <%= link_to t("link.newbook", name: Book.model_name.human), new_book_path %>
</nav>
